{
  "compilerOptions": {
    "rootDir": "./src/",
    "outDir": "./dist/",
    "target": "ES2020",
    "module": "NodeNext",
    "strict": true,
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "types": ["node"],
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "typeRoots": ["node_modules/@types"],
    "sourceMap": false,
    "baseUrl": "./",
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "**/node_modules/*", "dist"],
}
